<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style  x:Key="SaveButtonStyle" TargetType="RibbonButton">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="LargeImageSource" Value="Images/EnSave.png"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="LargeImageSource" Value="Images/DisSave.jpg"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style  x:Key="NewButtonStyle" TargetType="RibbonButton">
        <Setter Property="LargeImageSource" Value="Images/AddNew.png"/>
    </Style>
