             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlopManagerLoanModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" FlowDirection="RightToLeft">
    <TreeViewItem Header="التزامات المستحقين" Margin="0,0,0,5">
        <RadioButton x:Name="NavigateToLoanTypes" Content="أنواع الإلتزامات" Click="OnNavigateToLoanTypes"/>
        <RadioButton x:Name="NavigateToLoan" Content="إدخال التزام" Click="OnNavigateToLoan"/>
    </TreeViewItem>
</UserControl>
